{
  "$schema": "../node_modules/@angular-devkit/schematics/collection-schema.json",
  "extends": ["@schematics/angular"],
  "schematics": {
    "component": {
      "description": "Creates component and Angular Testing library spec file",
      "factory": "./tailormap-schematics/component#component",
      "schema": "./tailormap-schematics/component-schema.json",
      "aliases": ["c"]
    },
    "service": {
      "description": "Creates service and Spectator spec file",
      "factory": "./tailormap-schematics/service#service",
      "schema": "./tailormap-schematics/service-schema.json",
      "aliases": ["s"]
    },
    "state": {
      "description": "Creates state related files (reducer, state, actions, selectors)",
      "factory": "./tailormap-schematics/state#state",
      "schema": "./tailormap-schematics/state-schema.json"
    }
  }
}
